<section class="section section--padded section--content-image">
  
  <div class="container">
    
    <div class="card card--full" tabindex="0">
      {% if section.image %}
        {% set image = TimberImage(section.image) %}
        <div class="card__image card__image--{{ section.image_position }}" style="background-image: url({{ image.get_src('card-md') }})">
          {{ macros.img(image, 'card-md' , 'sr-only') }}
        </div>
      {% endif %}

      <div class="card__body">

        {% if section.subtitle %}
          <small class="label">{{ section.subtitle }}</small>
        {% endif %}

        {% if section.title %}
          <h2>{{ section.title }}</h2>
        {% endif %}
        
        {{ section.content }}
      </div>
    </div>

  </div>
  
</section>